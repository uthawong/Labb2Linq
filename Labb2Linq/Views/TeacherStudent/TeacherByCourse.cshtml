@model IEnumerable<Labb2Linq.Models.Enrollment>

@{
    ViewData["Title"] = "TeacherByCourse";
}

<h1>Teacher by Course</h1>

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Teacher</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var courseGroup in Model.GroupBy(e => e.Course))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => courseGroup.Key.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => courseGroup.First().Teacher.TeacherName)
                </td>
            </tr>
        }
    </tbody>
</table>
